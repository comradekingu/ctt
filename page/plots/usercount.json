{
    "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
    "title": "number of users publishing keys (approx.)",
    "width": 550,
    "height": 250,
    "data": {
        "url": "./plots/data.json"
    },
    "transform": [
        {
            "window": [
                {
                    "op": "sum",
                    "field": "users_published",
                    "as": "sum_published"
                }
            ]
        }
    ],
    "layer": [
        {
            "mark": {
                "type": "bar"
            },
            "encoding": {
                "x": {
                    "timeUnit": "utcmonthdate",
                    "field": "date",
                    "type": "ordinal"
                },
                "y": {
                    "field": "users_published",
                    "type": "quantitative",
                    "axis": {
                        "title": "users publishing keys per day",
                        "titleColor": "blue"
                    }
                }
            }
        },
        {
            "mark": {
                "type": "line",
                "point": {
                    "color": "red"
                },
                "color": "red"
            },
            "encoding": {
                "x": {
                    "timeUnit": "utcmonthdate",
                    "field": "date",
                    "type": "ordinal"
                },
                "y": {
                    "field": "sum_published",
                    "type": "quantitative",
                    "axis": {
                        "title": "running sum of users who published keys",
                        "titleColor": "red"
                    }
                }
            }
        }
    ],
    "resolve": {
        "scale": {
            "y": "independent"
        }
    }
}
