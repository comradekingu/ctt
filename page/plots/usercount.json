{
    "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
    "title": "number of users publishing keys per day",
    "width": 550,
    "height": 250,
    "data": {
        "url": "./plots/data.json"
    },
    "transform": [
        {
            "window": [
                {
                    "op": "sum",
                    "field": "users_published",
                    "as": "sum_published"
                }
            ]
        }
    ],
    "layer": [
        {
            "encoding": {
                "x": {
                    "timeUnit": "utcmonthdate",
                    "field": "date",
                    "type": "ordinal"
                },
                "y": {
                    "field": "users_published",
                    "type": "quantitative",
                    "axis": {
                        "title": "users publishing keys per day",
                        "titleColor": "steelblue"
                    }
                },
                "text": {
                    "field": "users_published",
                    "type": "quantitative"
                }
            },
            "layer": [
                {
                    "mark": {
                        "type": "bar"
                    }
                },
                {
                    "mark": {
                        "type": "text",
                        "color": "white",
                        "align": "left",
                        "baseline": "middle",
                        "angle": 90,
                        "dx": 1,
                        "dy": 1
                    }
                }
            ]
        },
        {
            "encoding": {
                "x": {
                    "timeUnit": "utcmonthdate",
                    "field": "date",
                    "type": "ordinal"
                },
                "y": {
                    "field": "sum_published",
                    "type": "quantitative",
                    "axis": {
                        "title": "running total of users who published keys",
                        "titleColor": "#b4464b"
                    }
                },
                "text": {
                    "field": "sum_published",
                    "type": "quantitative"
                }
            },
            "layer": [
                {
                    "mark": {
                        "type": "line",
                        "interpolate": "monotone",
                        "point": {
                            "color": "#b4464b"
                        },
                        "color": "#b4464b"
                    }
                },
                {
                    "mark": {
                        "type": "text",
                        "stroke": "#b4464b",
                        "align": "right",
                        "dx": -3,
                        "dy": 2,
                        "angle": 45
                    }
                }
            ]
        }
    ],
    "resolve": {
        "scale": {
            "y": "independent"
        }
    }
}
